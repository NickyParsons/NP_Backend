@page "{id:int?}"
@model TestAspNetApplication.Pages.CreateUserModel
@{
    ViewBag.Title = "";
}
@if (Model.RequestedUser == null)
{
    ViewBag.Title = "Добавление нового пользователя";
    <form action="/Persons/create" method="post" enctype="multipart/form-data">
        <p>
            <label for="firstname">Имя: </label>
            <input required id="firstname" name="firstname" />
        </p>
        <p>
            <label for="lastname">Фамилия: </label>
            <input required id="lastname" name="lastname" />
        </p>
        <p>
            <label for="photo">Фото профиля: </label>
            <input id="photo" type="file" name="photo" />
        </p>
        <input type="submit" value="Upload" />
    </form>
}
else
{
    ViewBag.Title = $"Редактирование пользователя {Model.RequestedUser.FirstName} {Model.RequestedUser.LastName}";
    <form action="/Persons/edit" method="post" enctype="multipart/form-data">
        <p>
            <label for="firstname">Имя: </label>
            <input required id="firstname" name="firstname" value="@Model.RequestedUser.FirstName" />
        </p>
        <p>
            <label for="lastname">Фамилия: </label>
            <input required id="lastname" name="lastname" value="@Model.RequestedUser.LastName" />
        </p>
        <p>
            <label for="photo">Фото профиля: </label>
            <input id="photo" type="file" name="photo" />
        </p>
        <input type="hidden" name="id" value="@Model.RequestedUser.Id" />
        <input type="submit" value="Edit" />
    </form>
}